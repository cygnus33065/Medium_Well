doctype html
html
  head
      block head
        title="Medium Well"
        link(rel='stylesheet' href='/stylesheets/layout.css')
  body
    div.container
      div.header
        div.logo-header
          a(href="/")
            img(src="https://i.ibb.co/K6Bx5zt/mediumwelllogo.png")
        if locals.authenticated
          div.message-header
            h3 Hello #{locals.username}
          div.user-auth-header
            form(action='/users/logout' method='post')
              button.button(type='submit') Log Out
        else
          div.message-header
            h3 Welcome!
          div.user-auth-header
            form(action='/users/login' method='get')
              button.button(type='submit') Log In
            form(action='/users/signup' method='get')
              button.button(type='submit') Create Account
      block content
