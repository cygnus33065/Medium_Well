doctype html
html
  head
      block head
        title="Medium Well"
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel='stylesheet' href='/stylesheets/side-bar.css')
        script(src="https://kit.fontawesome.com/59b37e5601.js" crossorigin="anonymous")

  body
    div.container
      div.header
        div.logo-header
          a(href="/")
            img.header-logo(src="https://i.ibb.co/K6Bx5zt/mediumwelllogo.png")
        if locals.authenticated
          div.message-header.fade-in
            h3 Hello #{locals.username}
          div.user-auth-header
            form(action='/users/logout' method='post')
              button.button(type='submit') Log Out
        else
          div.message-header.fade-in
            h3 Welcome
          div.user-auth-header
            form(action='/users/login' method='get')
              button.button(type='submit') Log In
            form(action='/users/signup' method='get')
              button.button(type='submit') Create Account
      block content
      div.side-bar
        h3.side-bar-title WHAT TO READ
            div.side-button-container
              a.side-button(href="/category/1") 
                i(class="fas fa-music")
              a.side-button(href="/category/2") 
                i(class="fas fa-tv")
              a.side-button(href="/category/3") 
                i(class="fas fa-film")
              a.side-button(href="/category/4") 
                i(class="fas fa-user-secret")
              a.side-button(href="/category/5") 
                i(class="fas fa-laptop-code")
              a.side-button(href="/category/6") 
                i(class="fas fa-wifi")
              a.side-button(href="/category/7") 
                i(class="fas fa-hamburger")
