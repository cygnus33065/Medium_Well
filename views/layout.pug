doctype html
html
  head
      block head
        title="Medium Well"
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel='stylesheet' href='/stylesheets/side-bar.css')
        script(src="https://kit.fontawesome.com/59b37e5601.js" crossorigin="anonymous")

  body.container
      div.header
        div.logo-header
          a(href="/")
            img.header-logo(src="https://i.ibb.co/K6Bx5zt/mediumwelllogo.png")
        if locals.authenticated
          div.message-header.fade-in
            a(href=`/users/${locals.userId}`)
              h3.message-header.fade-in Hello #{locals.username}
          div.user-auth-header
            form(action='/users/logout' method='post')
              button.button(type='submit') Log Out
        else
          div.message-header.fade-in
            h3 Welcome
          div.user-auth-header
            form(action='/users/login' method='get')
              button.button(type='submit') Log In
            form(action='/users/signup' method='get')
              button.button(type='submit') Create Account
      block content
      div.side-bar
        h3.side-bar-title WHAT TO READ
            div.side-button-container
              a.side-button(href="/story/categories/1/stories") 
                i(class="fas fa-music")
              a.side-button(href="/story/categories/2/stories") 
                i(class="fas fa-tv")
              a.side-button(href="/story/categories/3/stories") 
                i(class="fas fa-film")
              a.side-button(href="/story/categories/4/stories") 
                i(class="fas fa-user-secret")
              a.side-button(href="/story/categories/5/stories") 
                i(class="fas fa-laptop-code")
              a.side-button(href="/story/categories/6/stories") 
                i(class="fas fa-wifi")
              a.side-button(href="/story/categories/7/stories") 
                i(class="fas fa-hamburger")
      div.footer
        p.footer-text About&nbsp;&nbsp;&nbsp;Help&nbsp;&nbsp;&nbsp;Careers&nbsp;&nbsp;&nbsp;Status
