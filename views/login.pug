extends layout.pug

append head
    script(src='' type="module" defer)
block content
    div                    
    div.form
        form(method="POST" action="/users/login")
            input(type="hidden" name="_csrf" value=csrfToken)
            div.signinform-title Sign in with email
            div.form-element
                label.form-label(for="email") Your email
                input(type="email" name="email" id="email")
            div.form-element
                label.form-label(for="password") Password
                input(type="password" name="password" id="password")
            div.button-container
                button.getstartedbutton(type="submit") Sign In
           
        form(method="POST" action="/users/demo")
            div.button-container
                button.signinbutton(type="submit") Demo Log In
                a(href="/users/signup").form-link
                    p.form-fine-print or click here to sign up       
    div
    div
    if errors
        div.errors
            ul
                each error in errors
                        li= error

